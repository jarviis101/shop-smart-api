# GraphQL schema example
#
# https://gqlgen.com/getting-started/

directive @auth on FIELD_DEFINITION

type User {
  id: ID!
  firstName: String!
  lastName: String!
  middleName: String!
  phone: String!
}

type Query {
  me: User! @auth
}

input UpdateUser {
  firstName: String!
  lastName: String!
  middleName: String!
}

type Mutation {
  updatePersonalInfo(input: UpdateUser!): User! @auth
}

